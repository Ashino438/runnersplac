<script>
/* ===== ユーティリティ ===== */
const $ = (s,root=document)=>root.querySelector(s);
const $$ = (s,root=document)=>[...root.querySelectorAll(s)];
const prefersLight = window.matchMedia && window.matchMedia('(prefers-color-scheme: light)').matches;

/* ===== テーマ切替（保存つき） ===== */
const root = document.documentElement;
const themeToggle = $('#themeToggle');
const savedTheme = localStorage.getItem('theme');
function applyTheme(theme){
  if(theme === 'light'){ root.setAttribute('data-theme','light'); themeToggle?.setAttribute('aria-pressed','true'); }
  else { root.removeAttribute('data-theme'); themeToggle?.setAttribute('aria-pressed','false'); }
  try {
    const color = root.hasAttribute('data-theme') ? '#ffffff' : '#0b0b0c';
    document.querySelector('meta[name="theme-color"]')?.setAttribute('content', color);
  } catch(_) {}
}
applyTheme(savedTheme || (prefersLight ? 'light' : 'dark'));
themeToggle?.addEventListener('click', ()=>{
  const next = root.hasAttribute('data-theme') ? 'dark' : 'light';
  localStorage.setItem('theme', next);
  applyTheme(next);
});
document.addEventListener('keydown', (e)=>{ if(e.key.toLowerCase()==='t') themeToggle?.click(); });

/* ===== 目次開閉＋スムーススクロール ===== */
const toc = $('#tocBox');
const openToc = $('#openToc');
const closeToc = $('#closeToc');
function setToc(open){
  toc.style.display = open ? 'flex' : 'none';
  openToc.setAttribute('aria-expanded', String(open));
}
openToc?.addEventListener('click', ()=> setToc(toc.style.display==='none'));
closeToc?.addEventListener('click', ()=> setToc(false));
document.addEventListener('keydown', (e)=>{ if(e.key === '/') { e.preventDefault(); setToc(true); toc.scrollIntoView({behavior:'smooth', block:'center'});} });

$$('.toc a').forEach(a=>{
  a.addEventListener('click', (e)=>{
    e.preventDefault();
    const id = a.getAttribute('href');
    const el = $(id);
    if(el){ el.scrollIntoView({behavior:'smooth'}); history.replaceState(null,'',id); }
  });
});

/* ===== 読み進捗バー ===== */
const bar = $('#progressBar');
const main = $('#main');
function onScroll(){
  const rect = main.getBoundingClientRect();
  const total = main.scrollHeight - window.innerHeight;
  const scrolled = Math.min(Math.max(window.scrollY,0), total);
  const percent = total>0 ? (scrolled/total)*100 : 0;
  bar.style.width = percent.toFixed(2)+'%';
  // Buybar表示
  const buybar = $('#buybar');
  if(!sessionStorage.getItem('buybarHidden')){
    if(percent>20) buybar.hidden = false;
    if(percent<5) buybar.hidden = true;
  }
}
window.addEventListener('scroll', onScroll, {passive:true});
onScroll();

/* ===== ヘッダー縮小（演出） ===== */
let lastY = window.scrollY;
const header = $('header.site .header-inner');
function shrink(){
  const y = window.scrollY;
  const goingDown = y > lastY;
  header.style.transform = goingDown ? 'translateY(-6px)' : 'translateY(0)';
  header.style.transition = 'transform .18s ease';
  lastY = y;
}
window.addEventListener('scroll', shrink, {passive:true});

/* ===== 共有・コピー ===== */
const copyBtn = $('#copyLink');
const shareBtn = $('#shareBtn');
const shareNative = $('#shareNative');
function pageData(){
  return {title: document.title, text: $('meta[name=description]')?.content || document.title, url: location.href};
}
copyBtn?.addEventListener('click', async ()=>{
  try{ await navigator.clipboard.writeText(location.href); copyBtn.textContent = 'コピーしました'; setTimeout(()=>copyBtn.textContent='リンクをコピー',1800); }
  catch{ alert('コピーに失敗しました'); }
});
[shareBtn, shareNative].forEach(btn=>{
  btn?.addEventListener('click', async ()=>{
    const data = pageData();
