    new Chart(ctx, {
      type: 'radar',
      data: {
        labels: [
          "クッション性", "安定性", "軽さ", "コスパ", "履き心地（フィット感）",
          "デザイン", "通気性", "スピード性能", "グリップ", "耐久性"
        ],
        datasets: [
          {
            label: 'あなたの評価',
            data: myRatings,
            borderWidth: 2,
            backgroundColor: 'rgba(52, 152, 219, 0.2)',
            borderColor: '#3498db',
            pointBackgroundColor: '#3498db'
          },
          {
            label: '全体の平均',
            data: avgRatings,
            borderWidth: 2,
            backgroundColor: 'rgba(241, 196, 15, 0.2)',
            borderColor: '#f1c40f',
            pointBackgroundColor: '#f1c40f'
          }
        ]
      },
      options: {
        responsive: true,
        scales: {
          r: {
            min: 0,
            max: 5,
            ticks: {
              stepSize: 1
            }
          }
        }
      }
    });

    const ctx2 = document.getElementById('hostChart').getContext('2d');
    new Chart(ctx2, {
      type: 'radar',
      data: {
        labels: [
          "クッション性", "安定性", "軽さ", "コスパ", "履き心地（フィット感）",
          "デザイン", "通気性", "スピード性能", "グリップ", "耐久性"
        ],
        datasets: [{
          label: 'ホスト評価',
          data: [4, 4, 3, 4, 4, 4, 5, 3, 2, 4],
          backgroundColor: 'rgba(46, 204, 113, 0.2)',
          borderColor: '#2ecc71',
          pointBackgroundColor: '#2ecc71'
        }]
      },
      options: {
        responsive: true,
        scales: {
          r: {
            min: 0,
            max: 5,
            ticks: {
              stepSize: 1
            }
          }
        }
      }
    });
    document.addEventListener('DOMContentLoaded', () => {
  const fadeElements = document.querySelectorAll('.fade-up');

  const observer = new IntersectionObserver(entries => {
    entries.forEach((entry, i) => {
      if (entry.isIntersecting) {
        const el = entry.target;
        el.style.transitionDelay = `${i * 0.15}s`; // ← 順番ごとに遅らせる
        el.classList.add('visible');
        observer.unobserve(el); // 一度だけ発動
      }
    });
  }, {
    threshold: 0.1
  });

  fadeElements.forEach(el => observer.observe(el));
});
 



 
  </script>
